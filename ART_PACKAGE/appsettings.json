{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"AuthContextConnection": "Server=.;Database=ART_DB;User Id=sa;Password=sa1;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "AuthContextConnection": "User Id=ART;Password=ART1;Data Source=192.168.1.96:1521/aml71;",
    "DGCMGMTConnection": "Server=.;Database=DGECM;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "FCF71Connection": "Server=.;Database=fcf71;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "dbType": "oracle",
  "homeType": "AML",
  "migrations": [
    "intializeDb",
    "AMLHomeViews"
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Error"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/Art-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=.;Database=ART_DB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
          "tableName": "ArtLogs",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "User",
                "DataType": "NVARCHAR",
                "DataLength": 255,
                "AllowNull": true
              }
            ]
          }
        }
      }
    ]
  },
  "LdapAuth": {
    "host": "Testdr.faisal.com.eg",
    "port": 389,
    "binduser": "uid=SasAd",
    "binduserpassword": null,
    "searchBase": "cn=SasAd,cn=Users,dc=Testdr,dc=faisal,dc=com,dc=eg",
    "filter": "(&(objectClass=person)(uid={0}))"
  }
}