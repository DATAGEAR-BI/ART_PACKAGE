@{
    ViewData["Title"] = "Comparison Segments";
}




<section class="content ">
    <div id="report-header" style="text-align:center">
        <h2>Comparison Customers's Segments</h2>
    </div>
    <div class="row">
        <div class="col-6">
            @*<m-select name="monthKey" id="month-key-spinner" data-searchable data-title="Month Key"></m-select>*@
            <label>Month Key</label>
            <select name="monthKey" id="month-key-spinner" onchange="onChangeMonthKey(this)"
                    class="form-control targeted-search-input ng-pristine ng-valid ng-touched " style="">
                <option value="monthKey">-- Not Selected --</option>

            </select>
        </div>
        <div class="col-6">
            <label>Month Key</label>
            <select name="segmentTypes" id="segment-type" onchange="onChangeSegmentType(this)"
                    class="form-control targeted-search-input ng-pristine ng-valid ng-touched " style="">
                <option value="segmentTypes">-- Not Selected --</option>

            </select>
            @*<m-select name="segmentTypes" id="segment-type" data-searchable data-title="SegmentType"></m-select>*@
        </div>
    </div>
    <div id="segmentsTypesChartContainer" hidden class="row mt-5">
        <m-donut-chart  id="CustCountPerTypeChart" data-title="Number of Customers Per Type" data-category="PartyTypeDesc" data-value="NumberOfCustomers" style="height:700px;padding-bottom:50px;" class="col-12"></m-donut-chart>
    </div>
    <div  id="segmentsChartsContainer" hidden class="row">
        <m-donut-chart  class="col-6" id="SegmentsCustCountChart" data-title="Number of Customers Per Segment" data-category="SegmentSorted" data-value="NumberOfCustomers" style="height:700px;padding-bottom:50px;"></m-donut-chart>
        <m-donut-chart  class="col-6" id="SegmentsAlertCountChart" data-title="Number of Alerts Per Segment" data-category="SegmentSorted" data-value="NumberOfAlerts" style="height:700px;padding-bottom:50px;"></m-donut-chart>
    </div>


    <div class="row">
        <div id="SegmentsComparisonChart" hidden  class="col-md-12" style="height:1000px;padding-bottom:50px;"></div>
    </div>
</section>


@section Scripts{
    <script src="~/js/components/charts/charts.js" type="module"></script>
    <script src="~/js/components/multiselect/select.js" type="module"></script>
    <script src="~/js/segmentcompare.js" asp-append-version="true" type="module"  defer></script>
}

