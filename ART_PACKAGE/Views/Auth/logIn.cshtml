@model LogInViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ART_PACKAGE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ART_PACKAGE.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row d-flex justify-content-center align-items-center pt-5">
        <div class="col-md-6">
            <section>
                <div class="d-flex flex-column">
                    <img class="text-center" src="~/imgs/LOGO.png" />
                    <h3 class="text-center"> <strong>  Analytics-Reporting-Tool </strong></h3>
                    <h3 class="text-center"> <strong> A.R.T </strong></h3>
                </div>
                <br>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <div class="d-flex justify-content-between">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </div>
                  
                </form>
            </section>
        </div>

    </div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
