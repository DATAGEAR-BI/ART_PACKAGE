@using ART_PACKAGE.Areas.Identity.Data;
@using ART_PACKAGE.Helpers.HTMLHelpers;
@using ART_PACKAGE.Helpers.CustomReport;
@model List<ArtSavedReportsChart>
@{
    ViewData["Title"] = "ShowReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/Plugins/Kendo/kendo.default-v2.min.css" rel="stylesheet" />
@*<script src="~/lib/Plugins/Kendo/jquery-1.12.4.min.js"></script>*@
<script src="~/lib/Plugins/Kendo/jquery.min.js"></script>
<script src="~/lib/Plugins/Kendo/jszip.js"></script>
<script src="~/lib/Plugins/Kendo/jszip.min.js"></script>
<script src="~/lib/Plugins/Kendo/kendo.all.min.js"></script>

<script src="~/lib/Plugins/amcharts_4.10.18/amcharts4/core.js"></script>
<script src="~/lib/Plugins/amcharts_4.10.18/amcharts4/charts.js"></script>
<script src="~/lib/Plugins/amcharts_4.10.18/amcharts4/themes/animated.js"></script>

<h2 id="title" ></h2>
<p id="desc"></p>
<div id="filters"></div>
<div id="grid"></div>
<div id="charts"   data-chartCount="@Model.Count()" >
    @for(int i =0; i<Model.Count(); i++)
    {
        <div id="chart-@i" data-column="@Model[i].Column" class="col-lg-12 col-md-12 col-sm-12" style="height:600px;margin-top:4%" data-type ="@((int)Model[i].Type)"></div>
    }
</div>

@section scripts {
   
    <script src="~/js/Dynamic.js" type="module" id="script" data-chartTypes="@(Html.EnumToString<ChartType>().Value)" data-urlkey="CustomReport"  data-handlerkey="customReport" data-id="@ViewBag.id"></script>

}

