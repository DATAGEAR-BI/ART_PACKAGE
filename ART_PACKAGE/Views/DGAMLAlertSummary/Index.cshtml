@using ART_PACKAGE.Helpers.CustomReport;
@using ART_PACKAGE.Helpers.HTMLHelpers;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Data Gear AML Alerts Summary Report
        <small> </small>
        <br />
    </h1>
</section>

<div class="container-fluid">
    <div class="row accordion accordion-flush mb-4" id="accordionFlushExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
                <span class="accordion-button collapsed text-uppercase fs-2 border border-primary-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    Filters
                </span>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <div class="row d-flex align-items-center">
                        <smart-query-builder class="offset-2 col-6" id="querybuilder" data-applybtn="applyBtn" data-params="BasicParams"></smart-query-builder>
                        <div class="col-2 d-flex justify-content-center">
                            <button id="applyBtn" class="btn btn-primary">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <m-bar-chart id="StAlertsPerStatus" data-dataurlkey="StAlertsPerStatus" data-filterbuilderid="querybuilder" data-title="Number of Alerts Per Status" data-category="ALERTS_COUNT" data-value="ALERT_STATUS" style="height:600px"></m-bar-chart>
        <m-bar-chart id="StAlertPerOwner" data-dataurlkey="StAlertPerOwner" data-filterbuilderid="querybuilder" data-title="Number of Alert Per Owner" data-category="OWNER_QUEUE" data-value="ALERTS_CNT_SUM" style="height:600px"></m-bar-chart>
        <m-bar-chart id="StAlertPerBranch" data-dataurlkey="StAlertPerBranch" data-filterbuilderid="querybuilder" data-title="Number of Alert Per Branch" data-category="BRANCH_NAME" data-value="ALERTS_COUNT" style="height:600px"></m-bar-chart>
        <m-bar-chart id="StAlertPerScenario" data-dataurlkey="StAlertPerScenario" data-filterbuilderid="querybuilder" data-title="Number of Alert Per Scenario" data-category="SCENARIO_NAME" data-value="ALERTS_COUNT" style="height:600px"></m-bar-chart>

    </div>
</div>

@section Scripts {
    <script src="~/lib/smartcomponents/source/modules/smart.querybuilder.js"></script>
    <script type="module" defer src="~/js/components/charts/charts.js"></script>
}





















